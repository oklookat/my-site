{
  "debug": true,
  "host": "localhost",
  "port": "3333",
  "db": {
    "timezone": "Europe/Moscow",
    "postgres": {
      "host": "localhost",
      "port": "5432",
      "user": "postgres",
      "password": "root",
      "database": "elven"
    }
  },
  "logger": {
    "level": 1
  },
  "security": {
    "https": {
      "active": true,
      "certPath": "cert.pem",
      "keyPath": "key.pem"
    },
    "cookie": {
      "domain": "example.com",
      "path": "/",
      "maxAge": "9999h",
      "httpOnly": true,
      "secure": true,
      "sameSite": "None"
    },
    "cors": {
      "allowOrigin": [
        "example.com"
      ],
      "allowMethods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH"
      ],
      "allowHeaders": [
        "*"
      ],
      "exposeHeaders": [
        "cache-control",
        "content-language",
        "content-type",
        "expires",
        "last-modified",
        "pragma"
      ],
      "allowCredentials": true,
      "maxAge": 90
    },
    "limiter": {
      "body": {
        "active": true,
        "maxSize": 100,
        "except": []
      }
    },
    "encryption": {
      "aes": {
        "secret": "@MeQfTjWNZR3u9x!A%DVG-KaNdRgUkXp"
      },
      "bcrypt": {
        "cost": 14
      },
      "argon": {
        "memory": 32,
        "iterations": 1,
        "parallelism": 2,
        "saltLength": 16,
        "keyLength": 32
      }
    }
  },
  "uploads": {
    "to": "uploads",
    "temp": "uploads/temp"
  },
  "control": {
    "telegram": {
      "enabled": true,
      "token": "TOKEN",
      "allowedUsers": [
        123456789
      ],
      "allowedChats": [
        123456789
      ]
    }
  }
}