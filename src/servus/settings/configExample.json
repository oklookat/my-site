{
  "debug": true,
  "timezone": "Europe/Moscow",
  "host": "localhost",
  "port": "3333",
  "db": {
    "driver": "Postgres",
    "postgres": {
      "host": "localhost",
      "port": "5432",
      "user": "postgres",
      "password": "root",
      "database": "elven_go"
    }
  },
  "logger": {
    "writeToConsole": true,
    "writeToFile": {
      "active": true,
      "maxLogFiles": 3,
      "maxLogSize": 10000000
    }
  },
  "security": {
    "https": {
      "active": true,
      "certPath": "C:/cert.pem",
      "keyPath": "C:/key.pem"
    },
    "cookie": {
      "domain": "example.com",
      "path": "/",
      "maxAge": "9999h",
      "httpOnly": true,
      "secure": true,
      "sameSite": "None"
    },
    "cors": {
      "active": true,
      "allowOrigin": ["https://sub.example.com", "https://example.com"],
      "allowMethods": ["GET", "HEAD", "POST", "PUT", "DELETE"],
      "allowHeaders": ["*"],
      "exposeHeaders": ["cache-control", "content-language", "content-type", "expires", "last-modified", "pragma"],
      "allowCredentials": true,
      "maxAge": 90
    },
    "limiter": {
      "body": {
        "active": false,
        "maxSize": 1024,
        "except": []
      }
    },
    "encryption": {
      "aes": {
        "secret": "@McQfTjWnZr4u7x!A%D*G-KaNdRgUkXp"
      },
      "bcrypt": {
        "cost": 14
      },
      "argon": {
        "memory": 32,
        "iterations": 1,
        "parallelism": 2,
        "saltLength": 16,
        "keyLength": 32
      }
    }
  },
  "uploads": {
    "to": "D:/uploads",
    "temp": "D:/uploads/temp"
  },
  "control": {
    "telegram": {
      "enabled": true,
      "token": "123",
      "httpLevel": 1
    }
  }
}